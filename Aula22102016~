FLEX importante:
exemplo
http://dabblet.com/gist/b50fb951845db90733ab



/**
 * Flexbox demo
 * Por Yuri Padilha
 */
footer {
	background-image: url(http://mirrorfashion.net/assets/fundo-rodape.png);
	padding: 25px;
}

footer .container {
	width: 940px;
	margin: 0 auto;
	display:flex;
	justify-content:space-between;
	align-items:center;
}

.social {
	display:flex;	
}

.social li {
	list-style: none;
	
}

.social li a {
	height: 32px;
	width: 32px;
	display: block;
	text-indent: -9999px;
}

.social li a[href*="facebook.com"] {
	background-image: url(http://mirrorfashion.net/assets/facebook.png);
}
.social li a[href*="twitter.com"] {
	background-image: url(http://mirrorfashion.net/assets/twitter.png);
}	
.social li a[href*="plus.google.com"] {
	background-image: url(http://mirrorfashion.net/assets/googleplus.png);
}

/* Reset em algumas coisas bizarras */
ul, h1, li { padding: 0; margin: 0; }




